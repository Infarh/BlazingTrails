@page "/"

<PageTitle>Blazing Trails</PageTitle>

@* <LifeCycleAsync/> *@

@if (_Trails == null)
{
    <p>Loading trails...</p>
}
else
{
    <TrailDetails Trail="_SelectedTrail" />

    <div class="grid">
        @foreach (var trail in _Trails)
        {
            <TrailCard Trail="trail" OnSelected="trail => _SelectedTrail = trail"/>
        }
    </div>
}

@code {
    private Trail? _SelectedTrail;
}